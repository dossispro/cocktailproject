<head>
    <title><%= content.strDrink %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Titan+One&display=swap"
      rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/styles/breakout.css">
  </head>
  
<body class="breakout">
   <div class="px-4 pt-5 my-5 text-center breakout-div">
    <h1 class="display-4 fw-bold text-body-emphasis"><%= content.strDrink %></h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4"> <%= content.strInstructions %></p>
      <p class="lead mb-4">
    <% for (var i = 1; i <=15; i++ ) { %>
        <% if (content[`strIngredient${i}`] !== null) {  %>
        <li> <%= content[`strMeasure${i}`] + " " + content[`strIngredient${i}`] %> </li>
        <% } else { %>
            <% break %>
        <% } %>
    <% } %>
    </p>
    </div>
    <div class="overflow-hidden">
      <div class="container px-5">
        <img src="<%= content.strDrinkThumb %>" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image" width="700" height="500" loading="lazy">
      </div>
    </div>
  </div>
  <%- include("partials/footer.ejs") %>
</body>
