<!DOCTYPE html>
<html>

<head>
  <title>Cocktail Mania</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&family=Titan+One&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="styles/main.css">

</head>

<body>

<div>
  <h1>Choose your cocktail base:</h1>
</div>
<div class="btn-group m-4 g-5 p-4" role="group" aria-label="Basic radio toggle button group">
  <form action="/alcohol_type" method="post" type="submit">
    <button class="btn btn-success btn-lg" name="alcohol" value="gin">Gin</button>
    <button class="btn btn-warning btn-lg" name="alcohol" value="tequila">Tequila</button>
    <button class="btn btn-dark btn-lg" name="alcohol" value="rum">Rum</button>
    <button class="btn btn-primary btn-lg" name="alcohol" value="vodka">Vodka</button>
  </form>
</div>


<div class="justify-content-md-center row row-cols-xxl-5 row-cols-xxl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% if (locals.content) { %>
    <% content.drinks.forEach((item) => { %>
      <div class="card m-1">
        <img src="<%= item.strDrinkThumb %>" class="card-img-top" alt="picture of " + <%=item.strDrink %>>
        <div class="card-body">
          <h5 class="card-title"><h4><%= item.strDrink %></h4> </a></h5>
          <a href=<%="/drink/" + item.idDrink%> class="btn btn-primary">Get Recipe</a>
        </div>
      </div>
    <% })  %>
    <% } else { %>
      <p> </p>
      <% } %> 
</div>

<%- include("partials/footer.ejs") %>
</body>
</html>
